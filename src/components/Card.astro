---
export interface Props {
	title: string;
	icon: string;
}
const { title, icon } = Astro.props;
---

<div
	class="flex flex-col justify-center items-center self-stretch rounded-xl border border-gray-100 px-6 py-4 shadow-sm hover:border-gray-200 hover:ring-1 hover:ring-teal-500 focus:outline-none focus:ring"
>
	<span id="iconTool" class="inline-block rounded-lg bg-gray-50 p-2">
		<img src={`${icon}`} alt={title} class="h-12 w-12" />
	</span>
	<h2 class="mt-2 text-white">{title}</h2>
</div>
